{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "rootDir": "src",
    "lib": ["dom", "es5", "scripthost", "es2015.promise" ],
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
  },
  "files": [
    "src/chrome-extension/background.ts",
    "src/chrome-extension/contentScript.ts",
    "src/chrome-extension/pageScript.ts",
    "src/chrome-extension/devtoolsPage.ts",
    "src/chrome-extension/panel.ts",
  ]
}
