{
  "compilerOptions": {
    "target": "es5",
    "outDir": "build",
    "rootDir": "src",
    "module": "commonjs",
    "lib": ["dom", "es5", "scripthost", "es2015.promise" ],
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
  },
  "files": [
    "src/chrome-extension/background",
    "src/chrome-extension/contentScript",
    "src/chrome-extension/pageScript",
    "src/chrome-extension/devtoolsPage",
    "src/chrome-extension/panel",
  ]
}
